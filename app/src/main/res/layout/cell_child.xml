<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m_8"
    android:elevation="@dimen/m_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delivery_grey"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/m_10">

        <ImageView
            android:id="@+id/ivDeliveryStat"
            android:layout_width="@dimen/m_20"
            android:layout_height="@dimen/m_20"
            android:src="@drawable/round_w" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCustName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_10"
                android:layout_toRightOf="@+id/tvCustID"
                android:text="Name"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/t_16" />

            <TextView
                android:id="@+id/tvCustDDN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_10"
                android:layout_toRightOf="@+id/tvCustID"
                android:maxLines="1"
                android:text="DDN"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/t_16" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>